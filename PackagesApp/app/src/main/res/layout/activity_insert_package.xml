<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="emmanuelrosales.packagesapp.InsertPackage"
    android:background="@android:color/background_dark"
    android:focusable="false" >


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/inputPLenght"
        android:layout_marginLeft="55dp"
        android:layout_marginStart="55dp"
        android:textColor="@android:color/background_dark"
        android:width="400dp"
        android:height="80dp"
        android:textSize="50dp"
        android:background="#FFFFFF"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="96dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/inputPWidth"
        android:layout_marginLeft="182dp"
        android:layout_marginStart="182dp"
        android:textColor="@android:color/background_dark"
        android:width="400dp"
        android:height="80dp"
        android:textSize="50dp"
        android:background="#FFFFFF"
        android:layout_alignTop="@+id/inputPLenght"
        android:layout_toRightOf="@+id/inputPLenght"
        android:layout_toEndOf="@+id/inputPLenght" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/inputPHeight"
        android:textColor="@android:color/background_dark"
        android:width="400dp"
        android:height="80dp"
        android:textSize="50dp"
        android:background="#FFFFFF"
        android:layout_below="@+id/inputPLenght"
        android:layout_alignLeft="@+id/inputPLenght"
        android:layout_alignStart="@+id/inputPLenght"
        android:layout_marginTop="86dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/inputDiasEntrega"
        android:textColor="@android:color/background_dark"
        android:width="400dp"
        android:height="80dp"
        android:textSize="50dp"
        android:background="#FFFFFF"
        android:layout_above="@+id/btnInsertP"
        android:layout_alignLeft="@+id/inputPHeight"
        android:layout_alignStart="@+id/inputPHeight"
        android:layout_marginBottom="71dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:background="#FFFFFF"
        android:layout_alignTop="@+id/inputPHeight"
        android:layout_alignLeft="@+id/txtPOwners"
        android:layout_alignStart="@+id/txtPOwners" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/insert"
        android:id="@+id/btnInsertP"
        android:width="200dp"
        android:height="80dp"
        android:textSize="50dp"
        android:textColor="#ffffffff"
        android:background="#ba888888"
        android:onClick="getValP"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/inputDiasEntrega"
        android:layout_toEndOf="@+id/inputDiasEntrega"
        android:layout_marginBottom="73dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/packageLenght"
        android:id="@+id/txtLenght"
        android:width="400dp"
        android:height="80dp"
        android:textColor="#ffffffff"
        android:textSize="50dp"
        android:layout_above="@+id/inputPWidth"
        android:layout_alignLeft="@+id/inputPLenght"
        android:layout_alignStart="@+id/inputPLenght" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/packageHeight"
        android:id="@+id/txtPHeight"
        android:width="400dp"
        android:height="60dp"
        android:textSize="50dp"
        android:textColor="#ffffffff"
        android:layout_above="@+id/spinner"
        android:layout_alignLeft="@+id/inputPHeight"
        android:layout_alignStart="@+id/inputPHeight" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/packageWidth"
        android:id="@+id/txtPWidth"
        android:width="400dp"
        android:height="80dp"
        android:textColor="#ffffffff"
        android:textSize="50dp"
        android:layout_above="@+id/inputPWidth"
        android:layout_alignLeft="@+id/inputPWidth"
        android:layout_alignStart="@+id/inputPWidth" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delivery Date"
        android:id="@+id/txtDeliveryDateP"
        android:width="400dp"
        android:height="60dp"
        android:textColor="#ffffffff"
        android:textSize="50dp"
        android:layout_above="@+id/inputDiasEntrega"
        android:layout_alignLeft="@+id/inputDiasEntrega"
        android:layout_alignStart="@+id/inputDiasEntrega" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Owners"
        android:id="@+id/txtPOwners"
        android:width="400dp"
        android:height="60dp"
        android:textColor="#ffffffff"
        android:textSize="50dp"
        android:layout_above="@+id/spinner"
        android:layout_alignLeft="@+id/inputPWidth"
        android:layout_alignStart="@+id/inputPWidth" />

</RelativeLayout>
