<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="emmanuelrosales.packagesapp.InsertTruck"
    android:background="@android:color/background_dark"
    >

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Home"
        android:id="@+id/bnBackHomeI"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#ffff1100"
        android:textColor="#ffffffff"
        android:width="150dp"
        android:height="70dp"
        android:onClick="jumpHome" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnCTipo3"
        android:background="@drawable/big"
        android:layout_alignBottom="@+id/btnCTipo2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="InsertCTipo3" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnCTipo2"
        android:background="@drawable/me"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="174dp"
        android:onClick="InsertCTipo2" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnCTipo1"
        android:layout_alignTop="@+id/btnCTipo2"
        android:layout_alignRight="@+id/bnBackHomeI"
        android:layout_alignEnd="@+id/bnBackHomeI"
        android:layout_marginRight="50dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/small"
        android:onClick="InsertCTipo1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dimensions          Length: 26                Width: 46              Height: 50"
        android:id="@+id/txtViewCT3"
        android:width="300dp"
        android:height="200dp"
        android:layout_below="@+id/btnCTipo1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffffff"
        android:textSize="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dimensions          Length: 20                Width: 40             Height: 46"
        android:id="@+id/txtViewCT2"
        android:width="300dp"
        android:height="200dp"
        android:textColor="#ffffffff"
        android:textSize="30dp"
        android:layout_below="@+id/btnCTipo1"
        android:layout_alignLeft="@+id/btnCTipo2"
        android:layout_alignStart="@+id/btnCTipo2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dimensions          Length: 16                Width: 30              Height: 34"
        android:id="@+id/txtViewCT1"
        android:width="300dp"
        android:height="200dp"
        android:textColor="#ffffffff"
        android:textSize="30dp"
        android:layout_below="@+id/btnCTipo1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
